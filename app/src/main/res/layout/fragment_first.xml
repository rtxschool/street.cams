<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FirstFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/hdr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/txt_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="false"
                android:fontFamily="sans-serif"

                android:text="@string/topic"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_nomencl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_role"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="false"
                android:fontFamily="sans-serif"
                android:text="@string/sub_topic"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/hdr">


            <RelativeLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#646464"
                android:paddingBottom="28dp"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:scrollbars="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/crd_tsk1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#B4B4B4"
                    app:cardBackgroundColor="#505050"
                    app:cardCornerRadius="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#A89912"
                        android:paddingBottom="28dp"
                        android:scrollbarAlwaysDrawVerticalTrack="false"
                        android:scrollbars="horizontal">


                        <TextView
                            android:id="@+id/txt_cmd_tsk1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="@string/stxt_cmd_tsk1"
                            android:textColor="#0664AF"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/crd_self_stat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt_cmd_tsk1"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"

                            android:background="#B4B4B4"
                            android:visibility="gone"
                            app:cardBackgroundColor="#505050"
                            app:cardCornerRadius="8dp">

                            <Button
                                android:id="@+id/cmd_self_stat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginRight="18dp"
                                android:backgroundTint="#C8C8C8"
                                android:text="@string/scmd_self_stat"
                                app:cornerRadius="4dp" />


                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/crd_tsk2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="8dp"
                    android:layout_below = "@id/crd_tsk1"
                    >

                    <RelativeLayout
                        android:id="@+id/cntr_crd_task2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#A89912"
                        android:paddingBottom="28dp"
                        android:scrollbarAlwaysDrawVerticalTrack="false"
                        android:scrollbars="horizontal">


                        <TextView
                            android:id="@+id/txt_cmd_tsk2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="@string/stxt_cmd_tsk2"
                            android:textColor="#0664AF"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/log_prim"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt_cmd_tsk2"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="#B4B4B4"
                            android:visibility="gone"
                            app:cardBackgroundColor="#505050"
                            app:cardCornerRadius="8dp">

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:stretchColumns="0">

                                <TableRow

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <EditText
                                        android:id="@+id/txt_log"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp"
                                        android:layout_marginRight="18dp"
                                        android:hint="@string/str_your"
                                        android:inputType="textShortMessage"
                                        android:text=""
                                        android:textColor="@color/white"
                                        android:textSize="16sp" />

                                    <Button
                                        android:id="@+id/btn_log"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="18dp"
                                        android:backgroundTint="#C8C8C8"
                                        android:onClick="verify_client"
                                        android:text="@string/str_log"
                                        app:cornerRadius="4dp" />

                                </TableRow>
                            </TableLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/crd_btns"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/log_prim"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="#B4B4B4"
                            android:visibility="gone"
                            app:cardBackgroundColor="#505050"
                            app:cardCornerRadius="8dp">

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:stretchColumns="0,1">

                                <TableRow

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <Button
                                        android:id="@+id/cmd_unique1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp"
                                        android:layout_marginRight="8dp"
                                        android:backgroundTint="#C8C8C8"
                                        android:onClick="toast_unique_box"
                                        android:text="@string/str_each"
                                        app:cornerRadius="4dp" />

                                    <Button
                                        android:id="@+id/cmd_unique2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp"
                                        android:layout_marginRight="8dp"
                                        android:backgroundTint="#C8C8C8"
                                        android:onClick="toast_unique_box"
                                        android:text="@string/str_box"
                                        app:cornerRadius="4dp" />

                                    <Space
                                        android:layout_width="8dp"
                                        android:layout_height="wrap_content" />
                                </TableRow>

                                <TableRow

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <Button
                                        android:id="@+id/cmd_unique4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp"
                                        android:layout_marginRight="8dp"
                                        android:backgroundTint="#C8C8C8"
                                        android:onClick="toast_unique_box"
                                        android:text="@string/str_is"
                                        app:cornerRadius="4dp" />

                                    <Button
                                        android:id="@+id/cmd_unique8"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp"
                                        android:layout_marginRight="8dp"
                                        android:backgroundTint="#C8C8C8"
                                        android:onClick="toast_unique_box"
                                        android:text="@string/str_unique"
                                        app:cornerRadius="4dp" />

                                </TableRow>
                            </TableLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/crd_tsk3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/crd_tsk2"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#B4B4B4"
                    app:cardBackgroundColor="#505050"
                    app:cardCornerRadius="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#A89912"
                        android:paddingBottom="28dp"
                        android:scrollbarAlwaysDrawVerticalTrack="false"
                        android:scrollbars="horizontal">


                    <TextView
                        android:id="@+id/txt_cmd_tsk3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="@string/stxt_cmd_tsk3"
                        android:textColor="#0664AF"
                        android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/crd_zombies"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt_cmd_tsk3"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"

                            android:background="#B4B4B4"
                            android:visibility="gone"
                            app:cardBackgroundColor="#505050"
                            app:cardCornerRadius="8dp">

                            <Button
                                android:id="@+id/cmd_zombies"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="18dp"
                                android:layout_marginRight="18dp"
                                android:backgroundTint="#C8C8C8"
                                android:text="@string/zomb_movies"
                                app:cornerRadius="4dp" />


                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/crd_tsk4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/crd_tsk3"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#B4B4B4"
                    app:cardBackgroundColor="#505050"
                    app:cardCornerRadius="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#A89912"
                        android:paddingBottom="28dp"
                        android:scrollbarAlwaysDrawVerticalTrack="false"
                        android:scrollbars="horizontal">


                        <TextView
                            android:id="@+id/txt_cmd_tsk4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="@string/stxt_cmd_tsk4"
                            android:textColor="#0664AF"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/crd_street"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt_cmd_tsk4"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"

                            android:background="#B4B4B4"
                            android:visibility="gone"
                            app:cardBackgroundColor="#505050"
                            app:cardCornerRadius="8dp">

                            <Button
                                android:id="@+id/cmd_street"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="18dp"
                                android:layout_marginRight="18dp"
                                android:backgroundTint="#C8C8C8"
                                android:text="@string/scmd_tsk4"
                                app:cornerRadius="4dp" />


                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
